<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xmlns="http://java.sun.com/xml/ns/javaee"
	xmlns:web="http://java.sun.com/xml/ns/javaee/web-app_2_5.xsd"
	xsi:schemaLocation="http://java.sun.com/xml/ns/javaee http://java.sun.com/xml/ns/javaee/web-app_2_5.xsd"
	id="WebApp_ID" version="2.5">
	<display-name>RoadAlert API</display-name>

	<listener>
		<listener-class>
			com.makanstudios.conscious.api.gcm.Initializer
		</listener-class>
	</listener>

	<servlet>
		<servlet-name>RegisterServlet</servlet-name>
		<servlet-class>
			com.makanstudios.conscious.api.gcm.RegisterServlet
		</servlet-class>
		<load-on-startup>1</load-on-startup>
	</servlet>

	<servlet-mapping>
		<servlet-name>RegisterServlet</servlet-name>
		<url-pattern>/gcm/register</url-pattern>
	</servlet-mapping>

	<servlet>
		<servlet-name>UnregisterServlet</servlet-name>
		<servlet-class>
			com.makanstudios.conscious.api.gcm.UnregisterServlet
		</servlet-class>
		<load-on-startup>1</load-on-startup>
	</servlet>

	<servlet-mapping>
		<servlet-name>UnregisterServlet</servlet-name>
		<url-pattern>/gcm/unregister</url-pattern>
	</servlet-mapping>

	<servlet>
		<servlet-name>SendAllMessagesServlet</servlet-name>
		<servlet-class>
			com.makanstudios.conscious.api.gcm.SendAllMessagesServlet
		</servlet-class>
		<load-on-startup>1</load-on-startup>
	</servlet>

	<servlet-mapping>
		<servlet-name>SendAllMessagesServlet</servlet-name>
		<url-pattern>/gcm/sendAll</url-pattern>
	</servlet-mapping>
	<!-- 
		<servlet>
		<servlet-name>HomeServlet</servlet-name>
		<servlet-class>
		com.makanstudios.conscious.api.gcm.HomeServlet
		</servlet-class>
		<load-on-startup>1</load-on-startup>
		</servlet>
		
		<servlet-mapping>
		<servlet-name>HomeServlet</servlet-name>
		<url-pattern>/gcm/dashboard</url-pattern>
		</servlet-mapping>
	-->
	<servlet>
		<servlet-name>Jersey REST Service</servlet-name>
		<servlet-class>
			com.sun.jersey.spi.container.servlet.ServletContainer
		</servlet-class>
		<init-param>
			<param-name>
				com.sun.jersey.config.property.packages
			</param-name>
			<param-value>
				com.makanstudios.conscious.api.resources;org.codehaus.jackson.jaxrs
			</param-value>
		</init-param>
		<load-on-startup>1</load-on-startup>
	</servlet>

	<servlet-mapping>
		<servlet-name>Jersey REST Service</servlet-name>
		<url-pattern>/v1/*</url-pattern>
	</servlet-mapping>

	<servlet>
		<servlet-name>jsp_dashboard</servlet-name>
		<jsp-file>/dashboard.jsp</jsp-file>
	</servlet>

	<servlet-mapping>
		<servlet-name>jsp_dashboard</servlet-name>
		<url-pattern>/gcm/dashboard</url-pattern>
	</servlet-mapping>

	<security-constraint>
		<web-resource-collection>
			<web-resource-name>RoadAlertApi</web-resource-name>
			<url-pattern>/*</url-pattern>
		</web-resource-collection>
		<auth-constraint>
			<role-name>makan_roadalert</role-name>
		</auth-constraint>
		<user-data-constraint>
			<transport-guarantee>CONFIDENTIAL</transport-guarantee>
		</user-data-constraint>
	</security-constraint>

	<login-config>
		<auth-method>BASIC</auth-method>
		<realm-name>Makan Studios Road Alert API</realm-name>
	</login-config>
</web-app>
