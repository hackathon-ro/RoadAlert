<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res/com.makanstudios.name"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <com.makanstudios.name.widget.CustomTextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/hello_world"
        app:typeface_type="1"
        tools:context=".DelegateActivity" />

    <com.makanstudios.name.widget.CustomTextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/hello_world"
        app:typeface_type="2"
        tools:context=".DelegateActivity" />

    <com.makanstudios.name.widget.CustomTextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/hello_world"
        app:typeface_type="3"
        tools:context=".DelegateActivity" />

    <com.makanstudios.name.widget.CustomTextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/hello_world"
        app:typeface_type="4"
        tools:context=".DelegateActivity" />

    <com.makanstudios.name.widget.CustomTextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/hello_world"
        tools:context=".DelegateActivity" />

    <com.makanstudios.name.widget.CustomButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/hello_world"
        app:typeface_type="2"
        tools:context=".DelegateActivity" />

    <com.makanstudios.name.widget.CustomRadioButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/hello_world"
        app:typeface_type="2"
        tools:context=".DelegateActivity" />

    <com.makanstudios.name.widget.CustomCheckBox
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/hello_world"
        app:typeface_type="2"
        tools:context=".DelegateActivity" />

    <com.makanstudios.name.widget.CustomEditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/hello_world"
        app:typeface_type="2"
        tools:context=".DelegateActivity" />

</LinearLayout>